        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:text="Doreccion N°1"
